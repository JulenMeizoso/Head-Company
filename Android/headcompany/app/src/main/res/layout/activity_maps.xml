<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MapsActivity"
    android:background="#008000">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/top_tab"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                android:backgroundTint="#008000"
                android:layout_marginTop="0dp"
                app:cardCornerRadius="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageButton
                        android:id="@+id/menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/menu"
                        app:layout_constraintVertical_bias="1"
                        app:layout_constraintHorizontal_bias="0"
                        android:backgroundTint="#00000000"/>

                    <ImageButton
                        android:id="@+id/profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/user"
                        app:layout_constraintVertical_bias="1"
                        app:layout_constraintHorizontal_bias="1"
                        android:backgroundTint="#00000000"/>

                    <ImageButton
                        android:id="@+id/fav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/fav_off"
                        android:clickable="true"
                        android:focusable="true"
                        app:layout_constraintVertical_bias="1"
                        app:layout_constraintHorizontal_bias="0.85"
                        android:backgroundTint="#00000000"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/bottom_menu"
                android:layout_width="325dp"
                android:layout_height="250dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1"
                app:cardCornerRadius="20dp"
                android:layout_gravity="start"
                android:orientation="vertical"
                android:backgroundTint="#FFFFFF"
                android:layout_marginBottom="62.5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageButton
                        android:id="@+id/close"
                        android:src="@drawable/close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.05"
                        app:layout_constraintHorizontal_bias="0.975"
                        android:backgroundTint="#00000000"/>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/type_border"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="30dp"
                        android:textAlignment="viewStart"
                        android:fontFamily="@font/inter"
                        android:textColor="#101828"
                        app:layout_constraintVertical_bias="0.075"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="0dp"
                        android:backgroundTint="#00000000">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/type_background"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:background="#00000000">

                            <TextView
                                android:text="placeholder"
                                android:id="@+id/incidenceType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:fontFamily="@font/inter"
                                android:textColor="#101828"
                                android:padding="5dp"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="275dp"
                        android:layout_height="125dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:backgroundTint="#D9D9D9"
                        app:cardCornerRadius="10dp"
                        app:layout_constraintVertical_bias="0.425"
                        app:cardElevation="0dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginStart="15dp"
                                android:textAlignment="viewStart"
                                android:fontFamily="@font/inter"
                                android:textColor="#101828"
                                app:layout_constraintVertical_bias="0.1"
                                android:text="@string/direccion" />

                            <TextView
                                android:id="@+id/direction"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginStart="15dp"
                                android:textAlignment="viewStart"
                                android:fontFamily="@font/inter"
                                android:textColor="#101828"
                                app:layout_constraintVertical_bias="0.25"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginStart="15dp"
                                android:textAlignment="viewStart"
                                android:fontFamily="@font/inter"
                                android:textColor="#101828"
                                app:layout_constraintVertical_bias="0.45"
                                android:text="@string/ciudad"/>

                            <TextView
                                android:id="@+id/province"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginStart="15dp"
                                android:textAlignment="viewStart"
                                android:fontFamily="@font/inter"
                                android:textColor="#101828"
                                app:layout_constraintVertical_bias="0.6"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginStart="15dp"
                                android:textAlignment="viewStart"
                                android:fontFamily="@font/inter"
                                android:textColor="#101828"
                                app:layout_constraintVertical_bias="0.8"
                                android:text="@string/fecha"/>

                            <TextView
                                android:id="@+id/startDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginStart="15dp"
                                android:textAlignment="viewStart"
                                android:fontFamily="@font/inter"
                                android:textColor="#101828"
                                app:layout_constraintVertical_bias="0.95"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/fav_button"
                        android:text="@string/favs_add"
                        android:layout_width="275dp"
                        android:layout_height="50dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.95"
                        app:cornerRadius="7.5dp"
                        android:fontFamily="@font/inter"
                        android:textColor="#101828"
                        android:backgroundTint="#D9D9D9"
                        app:rippleColor="@android:color/transparent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/top_tab"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/menu_left"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="8dp"
            android:layout_gravity="start"
            android:orientation="vertical"
            android:backgroundTint="#FFFFFF">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:layout_width="225dp"
                    android:layout_height="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.075"
                    android:background="#EFF1F3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/filters"
                    android:textColor="#828282"
                    android:textSize="20sp"
                    app:layout_constraintVertical_bias="0.1"
                    android:fontFamily="@font/inter"/>

                <View
                    android:layout_width="225dp"
                    android:layout_height="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.15"
                    android:background="#EFF1F3" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/accidentes"
                    android:layout_width="200dp"
                    android:layout_height="47.5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/accidentes"
                    android:drawableEnd="@drawable/accidente"
                    app:strokeWidth="3dp"
                    app:layout_constraintVertical_bias="0.175"
                    android:backgroundTint="#D9D9D9"
                    app:cornerRadius="7.5dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/accidente"
                    app:strokeColor="@color/accidente"
                    app:rippleColor="@android:color/transparent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/obras"
                    android:layout_width="200dp"
                    android:layout_height="47.5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/obras"
                    android:drawableEnd="@drawable/obras"
                    app:strokeWidth="3dp"
                    app:layout_constraintVertical_bias="0.25"
                    android:backgroundTint="#D9D9D9"
                    app:cornerRadius="7.5dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/obras"
                    app:strokeColor="@color/obras"
                    app:rippleColor="@android:color/transparent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/meteorologia"
                    android:layout_width="200dp"
                    android:layout_height="47.5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/meteorologia"
                    android:drawableEnd="@drawable/metereologia"
                    app:strokeWidth="3dp"
                    app:layout_constraintVertical_bias="0.325"
                    android:backgroundTint="#D9D9D9"
                    app:cornerRadius="7.5dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/meteorologia"
                    app:strokeColor="@color/meteorologia"
                    app:rippleColor="@android:color/transparent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/seguridad_vial"
                    android:layout_width="200dp"
                    android:layout_height="47.5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/seguridad_vial"
                    android:drawableEnd="@drawable/seguridad_vial"
                    app:strokeWidth="3dp"
                    app:layout_constraintVertical_bias="0.4"
                    android:backgroundTint="#D9D9D9"
                    app:cornerRadius="7.5dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/seguridad_vial"
                    app:strokeColor="@color/seguridad_vial"
                    app:rippleColor="@android:color/transparent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/retencion"
                    android:layout_width="200dp"
                    android:layout_height="47.5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/retencion"
                    android:drawableEnd="@drawable/retencion"
                    app:strokeWidth="3dp"
                    app:layout_constraintVertical_bias="0.475"
                    android:backgroundTint="#D9D9D9"
                    app:cornerRadius="7.5dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/retencion"
                    app:strokeColor="@color/retencion"
                    app:rippleColor="@android:color/transparent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/vialidad_invernal"
                    android:layout_width="200dp"
                    android:layout_height="47.5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/vialidad_invernal"
                    android:drawableEnd="@drawable/vialidad_invernal"
                    app:strokeWidth="3dp"
                    app:layout_constraintVertical_bias="0.55"
                    android:backgroundTint="#D9D9D9"
                    app:cornerRadius="7.5dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/vialidad_invernal"
                    app:strokeColor="@color/vialidad_invernal"
                    app:rippleColor="@android:color/transparent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/puertos_de_montana"
                    android:layout_width="200dp"
                    android:layout_height="47.5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/puertos_de_montana"
                    android:drawableEnd="@drawable/puertos_de_montana"
                    app:strokeWidth="3dp"
                    app:layout_constraintVertical_bias="0.625"
                    android:backgroundTint="#D9D9D9"
                    app:cornerRadius="7.5dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/puertos_de_montana"
                    app:strokeColor="@color/puertos_de_montana"
                    app:rippleColor="@android:color/transparent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/otros"
                    android:layout_width="200dp"
                    android:layout_height="47.5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/otros"
                    android:drawableEnd="@drawable/otros"
                    app:strokeWidth="3dp"
                    app:layout_constraintVertical_bias="0.7"
                    android:backgroundTint="#D9D9D9"
                    app:cornerRadius="7.5dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/otros"
                    app:strokeColor="@color/otros"
                    app:rippleColor="@android:color/transparent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/camaras"
                    android:layout_width="200dp"
                    android:layout_height="47.5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/camaras"
                    app:strokeWidth="3dp"
                    app:strokeColor="#828282"
                    app:layout_constraintVertical_bias="0.775"
                    android:backgroundTint="#D9D9D9"
                    app:cornerRadius="7.5dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter"
                    android:textColor="#828282"
                    app:rippleColor="@android:color/transparent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cleanup"
                    android:layout_width="200dp"
                    android:layout_height="47.5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/cleanup"
                    app:strokeWidth="3dp"
                    app:strokeColor="#828282"
                    app:layout_constraintVertical_bias="0.9"
                    android:backgroundTint="#D9D9D9"
                    app:cornerRadius="7.5dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter"
                    android:textColor="#828282"
                    app:rippleColor="@android:color/transparent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.drawerlayout.widget.DrawerLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
