<Window x:Class="RETO2HC.CameraFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Cámara" Height="550" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#121212" Foreground="White">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#222"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#333"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#2ECC71"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#2ECC71" BorderThickness="1" Padding="20">
        <StackPanel>
            <TextBlock Text="DATOS DE LA CÁMARA" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="White"/>

            <TextBlock Text="Nombre:"/>
            <TextBox x:Name="TxtName" Text="{Binding Name}"/>

            <TextBlock Text="Dirección:"/>
            <TextBox x:Name="TxtAddress" Text="{Binding Address}"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Carretera:"/>
                    <TextBox x:Name="TxtRoad" Text="{Binding Road}"/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Km (Texto):"/>
                    <TextBox x:Name="TxtKilometer" Text="{Binding Kilometer}"/>
                </StackPanel>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Latitud (Decimal):"/>
                    <TextBox x:Name="TxtLatitude" Text="{Binding Latitude}"/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Longitud (Decimal):"/>
                    <TextBox x:Name="TxtLongitude" Text="{Binding Longitude}"/>
                </StackPanel>
            </Grid>

            <TextBlock Text="URL Imagen:"/>
            <TextBox x:Name="TxtUrl" Text="{Binding Url}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Cancelar" IsCancel="True" Width="100" Height="35" Background="Transparent" Foreground="#E74C3C" BorderBrush="#E74C3C" BorderThickness="1" Margin="0,0,10,0" Click="Cancel_Click"/>
                <Button Content="GUARDAR" IsDefault="True" Width="100" Height="35" Background="#2ECC71" Foreground="#121212" FontWeight="Bold" BorderThickness="0" Click="Save_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>   