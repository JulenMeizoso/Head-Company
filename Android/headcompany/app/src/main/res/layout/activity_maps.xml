<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MapsActivity"
    android:background="#008000">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/top_tab"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                android:backgroundTint="#008000"
                android:layout_marginTop="0dp"
                app:cardCornerRadius="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageButton
                        android:id="@+id/menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/menu"
                        app:layout_constraintVertical_bias="1"
                        app:layout_constraintHorizontal_bias="0"
                        android:backgroundTint="#00000000"/>

                    <ImageButton
                        android:id="@+id/profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/user"
                        app:layout_constraintVertical_bias="1"
                        app:layout_constraintHorizontal_bias="1"
                        android:backgroundTint="#00000000"/>

                    <ImageButton
                        android:id="@+id/fav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/fav_off"
                        android:clickable="true"
                        android:focusable="true"
                        app:layout_constraintVertical_bias="1"
                        app:layout_constraintHorizontal_bias="0.85"
                        android:backgroundTint="#00000000"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/top_tab"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/menu_left"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="8dp"
            android:layout_gravity="start"
            android:orientation="vertical"
            android:backgroundTint="#FFFFFF">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:layout_width="225dp"
                    android:layout_height="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.075"
                    android:background="#EFF1F3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/filters"
                    android:textColor="#828282"
                    android:textSize="20sp"
                    app:layout_constraintVertical_bias="0.1"
                    android:fontFamily="@font/inter"/>

                <View
                    android:layout_width="225dp"
                    android:layout_height="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.15"
                    android:background="#EFF1F3" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/accidentes"
                    android:layout_width="200dp"
                    android:layout_height="47.5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/accidents"
                    app:strokeWidth="3dp"
                    app:strokeColor="#828282"
                    app:layout_constraintVertical_bias="0.175"
                    android:backgroundTint="#D9D9D9"
                    app:cornerRadius="7.5dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter"
                    android:textColor="#828282" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/obras"
                    android:layout_width="200dp"
                    android:layout_height="47.5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/construction"
                    app:strokeWidth="3dp"
                    app:strokeColor="#828282"
                    app:layout_constraintVertical_bias="0.25"
                    android:backgroundTint="#D9D9D9"
                    app:cornerRadius="7.5dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter"
                    android:textColor="#828282" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/obstaculos"
                    android:layout_width="200dp"
                    android:layout_height="47.5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/obstacles"
                    app:strokeWidth="3dp"
                    app:strokeColor="#828282"
                    app:layout_constraintVertical_bias="0.325"
                    android:backgroundTint="#D9D9D9"
                    app:cornerRadius="7.5dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter"
                    android:textColor="#828282" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/trafico"
                    android:layout_width="200dp"
                    android:layout_height="47.5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/traffic"
                    app:strokeWidth="3dp"
                    app:strokeColor="#828282"
                    app:layout_constraintVertical_bias="0.4"
                    android:backgroundTint="#D9D9D9"
                    app:cornerRadius="7.5dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter"
                    android:textColor="#828282" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/eventos"
                    android:layout_width="200dp"
                    android:layout_height="47.5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/events"
                    app:strokeWidth="3dp"
                    app:strokeColor="#828282"
                    app:layout_constraintVertical_bias="0.475"
                    android:backgroundTint="#D9D9D9"
                    app:cornerRadius="7.5dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter"
                    android:textColor="#828282" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/meteorologia"
                    android:layout_width="200dp"
                    android:layout_height="47.5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/meteorology"
                    app:strokeWidth="3dp"
                    app:strokeColor="#828282"
                    app:layout_constraintVertical_bias="0.55"
                    android:backgroundTint="#D9D9D9"
                    app:cornerRadius="7.5dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter"
                    android:textColor="#828282" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/otros"
                    android:layout_width="200dp"
                    android:layout_height="47.5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/others"
                    app:strokeWidth="3dp"
                    app:strokeColor="#828282"
                    app:layout_constraintVertical_bias="0.625"
                    android:backgroundTint="#D9D9D9"
                    app:cornerRadius="7.5dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter"
                    android:textColor="#828282" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/camaras"
                    android:layout_width="200dp"
                    android:layout_height="47.5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/cameras"
                    app:strokeWidth="3dp"
                    app:strokeColor="#828282"
                    app:layout_constraintVertical_bias="0.7"
                    android:backgroundTint="#D9D9D9"
                    app:cornerRadius="7.5dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter"
                    android:textColor="#828282" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cleanup"
                    android:layout_width="200dp"
                    android:layout_height="47.5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/cleanup"
                    app:strokeWidth="3dp"
                    app:strokeColor="#828282"
                    app:layout_constraintVertical_bias="0.9"
                    android:backgroundTint="#D9D9D9"
                    app:cornerRadius="7.5dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter"
                    android:textColor="#828282" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.drawerlayout.widget.DrawerLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
